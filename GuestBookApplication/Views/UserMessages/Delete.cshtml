@model GuestBookApplication.Data.Models.UserMessage

@{
    ViewData["Title"] = "Delete";
}


<h3 style="color:red">Are you sure you want to delete this?</h3>
<div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="container card" style="margin: 100px auto;text-align:left">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Message)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Message)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AddedDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AddedDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ModifiedDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ModifiedDate)
            </dd>
        </dl>

    </div>
    
    
    <form asp-action="Delete">
        <div style="text-align:center;width:100%">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" style="width:150px"/>
        </div>
    </form>
</div>
